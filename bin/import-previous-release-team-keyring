#!/usr/bin/env bash

set -o nounset -o pipefail -o errexit

## Keys from https://github.com/nodejs/node/#release-team
KEYS="9554F04D7259F04124DE6B476D5A82AC7E37093B \
      93C7E9E91B49E432C2F75674B0A78B0A6C481CF6 \
      114F43EE0176B71C7BC219DD50A3051F888C628D \
      56730D5401028683275BD23C23EFEFE93C4CFFFE \
      7937DFD2AB06298B2293C3187D33FF9D0246406D"

SERVERS="ha.pool.sks-keyservers.net
         p80.pool.sks-keyservers.net:80 \
         ipv4.pool.sks-keyservers.net \
         keyserver.ubuntu.com
         keyserver.ubuntu.com:80 \
         pgp.mit.edu
         pgp.mit.edu:80"

OPTIONS=""
if [ -v http_proxy ];
then OPTIONS="--keyserver-options http-proxy=$http_proxy";
fi

if command -v gpg > /dev/null 2>&1; then
  gpg_command="gpg"
elif command -v gpg2 > /dev/null 2>&1; then
  gpg_command="gpg2"
else
  echo 'gpg or gpg2 command not found!'
  exit 1
fi

for key in $KEYS; do
  for server in $SERVERS; do
      $gpg_command --no-tty --keyserver "hkp://$server" $OPTIONS --display-charset utf-8 --recv-keys "$key" && break
  done
done
